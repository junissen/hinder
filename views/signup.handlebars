{{!-- Return Home Button Row --}}
<div class="row signupRow">
	<div class="col-md-2 col-sm-1 col-1">
	</div>

	<div class="col-md-8 col-sm-10 col-10">
		<div class='returnHomeButtonDiv'>
	    	<button type="button" id="returnHomeButton" class="btn btn-outline-danger returnHomeButton">Return to Login</button>
