{{!-- Hinder Logo Row --}}
<div class="row loginRow">
  <div class="col-1">
  </div>
  <div class="col-10">
    <div class="hinderClass">
      <img class="hinderLogo" src="https://fontmeme.com/permalink/180323/50aabc6e80ab2d2c3606770837f97459.png" alt="spray-paint-fonts" alt="Hinder Logo" width="400" border="0">
    </div>
  </div>
  <div class="col-1">
  </div>
